<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Robust.Client.UserInterface.Controls;assembly=Robust.Client"
    x:Class="Content.Client._NC.Trade.UI.Windows.NcStoreStructuredMenu"
    Title="Магазин" MinSize="300,350">
    <controls:BoxContainer Orientation="Vertical" SeparationOverride="6" Margin="8">
        <controls:BoxContainer Orientation="Horizontal">
            <controls:Label Text="Баланс:" Margin="0,0,6,0"/>
            <controls:Label Name="BalanceValue"/>
        </controls:BoxContainer>
        <controls:TabContainer Name="StoreTabs" VerticalExpand="True">
            <controls:PanelContainer controls:TabContainer.TabTitle="Купить" VerticalExpand="True">
                <controls:ScrollContainer Name="BuyList" VerticalExpand="True"/>
            </controls:PanelContainer>
            <controls:PanelContainer controls:TabContainer.TabTitle="Продать" VerticalExpand="True">
                <controls:ScrollContainer Name="SellList" VerticalExpand="True"/>
            </controls:PanelContainer>
            <controls:PanelContainer controls:TabContainer.TabTitle="Обмен" VerticalExpand="True">
                <controls:ScrollContainer Name="ExchangeList" VerticalExpand="True"/>
            </controls:PanelContainer>
        </controls:TabContainer>
    </controls:BoxContainer>
</DefaultWindow>

