<Control
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:at="clr-namespace:Content.Client.Administration.UI.Tabs.AtmosTab"
    Margin="4"
    MinSize="50 50">
    <GridContainer Columns="4">
        <cc:UICommandButton Text="{Loc ui-tab-atmos-add-atmos}" Command="addatmos" WindowType="{x:Type at:AddAtmosWindow}" /> <!-- Corvax-Localization -->
        <cc:UICommandButton Text="{Loc ui-tab-atmos-add-gas}" Command="addgas" WindowType="{x:Type at:AddGasWindow}" /> <!-- Corvax-Localization -->
        <cc:UICommandButton Text="{Loc ui-tab-atmos-fill-gas}" Command="fillgas" WindowType="{x:Type at:FillGasWindow}" /> <!-- Corvax-Localization -->
        <cc:UICommandButton Text="{Loc ui-tab-atmos-set-temperature-title}" Command="settemp"
                             WindowType="{x:Type at:SetTemperatureWindow}" /> <!-- Corvax-Localization -->
    </GridContainer>
</Control>
